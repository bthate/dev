# This file is placed in the Public Domain.


import os


todo = ["botlib", "rssbot"]


def popen(*args, **kwargs):
    c = 0
    for l in os.popen(*args, **kwargs):
        if not c:
            print(l.strip())
        c += 1

for td in todo:
    print("linting %s" % td)
    popen("pylint --ignore spc.py,all.py  -d E1121,E1101,E0102,C0415,C0301,C0413,W0603,W0622,W0212,W0703,W0613,R0915,R0912,R1710,R0201,R0903,R0902,C0411,C0116,C0114,C0115,C0103 %s" % td)
